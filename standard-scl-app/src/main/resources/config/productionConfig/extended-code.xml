<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- 	Properties and placeholders -->
	
	<util:list id="DM16x16_TXT2L">
		<bean class="com.sicpa.standard.printer.xcode.DatamatrixBlockFactory"
			p:modelDatamatrixFormat = "DM_16x16"
			p:modelDatamatrixEncoding = "C40"
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="RIGHT"
			p:options="TWO_LINES"
			p:length="6"
		/>
	</util:list>
	<util:list id="TXT2L_DM16x16">
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:options="TWO_LINES"
			p:length="6"
		/>
		<bean class="com.sicpa.standard.printer.xcode.DatamatrixBlockFactory"
			p:relativePosition="RIGHT"
			p:modelDatamatrixFormat = "DM_16x16"
			p:modelDatamatrixEncoding = "C40"
		/>
	</util:list>
	<util:list id="MY_PROP_0">
		<bean class="com.sicpa.standard.printer.xcode.DatamatrixBlockFactory"
			p:modelDatamatrixFormat = "DM_8x18"
			p:modelDatamatrixEncoding = "C40"
			p:options=""
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="RIGHT"
			p:options=""
			p:length="2"
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="ABOVE"
			p:options=""
			p:length="6"
		/>
	</util:list>
	<util:list id="MY_PROP_1">
		<bean class="com.sicpa.standard.printer.xcode.DatamatrixBlockFactory"
			p:modelDatamatrixFormat = "DM_8x18"
			p:modelDatamatrixEncoding = "C40"
			p:options=""
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="RIGHT"
			p:options=""
			p:length="2"
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="BELOW"
			p:options=""
			p:length="6"
		/>
	</util:list>
	<util:list id="MY_PROP_2">
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:options=""
			p:length="2"
		/>
		<bean class="com.sicpa.standard.printer.xcode.DatamatrixBlockFactory"
			p:relativePosition="RIGHT"
			p:modelDatamatrixFormat = "DM_8x18"
			p:modelDatamatrixEncoding = "C40"
			p:options=""
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="ABOVE"
			p:options=""
			p:length="6"
		/>
	</util:list>
	<util:list id="MY_PROP_3">
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:options=""
			p:length="2"
		/>
		<bean class="com.sicpa.standard.printer.xcode.DatamatrixBlockFactory"
			p:relativePosition="RIGHT"
			p:modelDatamatrixFormat = "DM_8x18"
			p:modelDatamatrixEncoding = "C40"
			p:options=""
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="BELOW"
			p:options=""
			p:length="6"
		/>
	</util:list>
	
	<util:list id="TextBlock">
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="RIGHT"
			p:options="TWO_LINES"
			p:length="12"
		/>
	</util:list>
	
	<util:list id="threeMixedBlocks">
		<bean class="com.sicpa.standard.printer.xcode.DatamatrixBlockFactory"
			p:modelDatamatrixFormat = "DM_16x16"
			p:modelDatamatrixEncoding = "C40"
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="RIGHT"
			p:options="TWO_LINES"
			p:length="4"
		/>
		<bean class="com.sicpa.standard.printer.xcode.BitmapBlockFactory" 
			p:relativePosition="RIGHT"
			p:options="STATIC"
			p:height="16"
		/>
	</util:list>
	<util:list id="threeTextBlocks">
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:length="3"
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="RIGHT"
			p:length="3"
		/>
		<bean class="com.sicpa.standard.printer.xcode.TextBlockFactory" 
			p:relativePosition="RIGHT"
			p:length="3"
		/>
	</util:list>
	<util:list id="dsl_4mm">
		<bean class="com.sicpa.standard.printer.xcode.DslBlockFactory">
			<property name="options">
				<value></value>
			</property>
			<property name="dslParamNumber"> 
				<value>3</value> 
			</property>
			<property name="dslScript">
				<value>canvas.alocateMM(4)
					.usingFontResource("/OCRA.ttf", 50) 
					.at(0.0, 10).rotate(-90).DMTX(param_1, 6, "DM16x16").rotate(0)
					.at(0.2, 10).rotate(-90).writeInBox(param_2.substring(0,4), 10, 3, "RxC").rotate(0)
					.at(2.2, 10).rotate(-90).writeInBox(param_3.substring(0,4), 10, 3, "RxC").rotate(0)
					;
				</value>
			</property>
		</bean>
	</util:list>
	<util:list id="dsl_8mm">
		<bean class="com.sicpa.standard.printer.xcode.DslBlockFactory">
			<property name="options">
				<value></value>
			</property>
			<property name="dslParamNumber"> 
				<value>3</value> 
			</property>
			<property name="dslScript">
				<value>canvas.alocateMM(8)
					.usingFontResource("/OCRA.ttf", 50)
					.at(0.0, 10).rotate(-90).DMTX(param_1, 6, "DM16x16").rotate(0)
					.at(0.2, 10).rotate(-90).writeInBox(param_2.substring(0,4), 10, 3, "RxC").rotate(0)
					.at(2.2, 10).rotate(-90).writeInBox(param_3.substring(0,4), 10, 3, "RxC").rotate(0)
					.at(4.0, 4).rotate(-90).DMTX(param_1, 6, "DM16x16").rotate(0)
					.at(4.2, 10).rotate(-90).writeInBox(param_2.substring(0,4), 10, 3, "LxC").rotate(0)
					.at(6.2, 10).rotate(-90).writeInBox(param_3.substring(0,4), 10, 3, "LxC").rotate(0)
					;
				</value>
			</property>
		</bean>
	</util:list>
	<util:list id="dsl_20mm">
		<bean class="com.sicpa.standard.printer.xcode.DslBlockFactory">
			<property name="options">
				<value></value>
			</property>
			<property name="dslParamNumber"> 
				<value>3</value> 
			</property>
			<property name="dslScript">
				<value>
				<![CDATA[

// File TK_Alcohol
//param_1 = "1234567ABCDEFG"
//param_2 = "2205/10\nK. Şarap\n%18-22\n(#330 ml)";

canvas.alocateMM(10.5)
.usingFontResource("/OCRA.ttf", 40) 

//HRC
.fontAttribute("WIDTH", 1.15)
.fontAttribute("WEIGHT", "BOLD")
//.at(0,0).rectangle(10.45, 4)
.at(0, 1.5).write(param_1.substring(0,7))
.at(0, 4).write(param_1.substring(7))

// beverage info
var base_text = 4+7;
canvas
.usingSystemFont("Monospace-BOLD-45")
//.at(0, base_text).rectangle(10.45, 14)
.at(0, base_text+1.5).write(param_2)
;

/*
param_3 = "99 Meyve Şarabı (#888 ml)";
canvas.alocateMM(10)
.usingFontResource("/OCRA.ttf", 40) 
//.at(0, 0).rectangle(11.9, 4) //boundaries
//.at(4, 4).rectangle(5, 23) //boundaries

//top text HRT
.fontSize(47)
.at(0, 1.3).write(param_2.substring(0,10))
.at(4, 3.7).write(param_2.substring(10,14))


//sideways brand
.at(5.5, 5).rotate(90)
.write( param_3.substring(0,2) )
.rotate(0)

.usingSystemFont("Serif-BOLD-45")
.at(5.5, 7.5)
.rotate(90)
.write( param_3.substring(2) )
;
*/
					]]>
				</value>
			</property>
		</bean>
	</util:list>

	<bean id="100"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFileFactory"
		p:blockFactories-ref="DM16x16_TXT2L"
		p:extendedCodeFileNamePrefix="MY_DATA/MY_PILOT_DUTY_PAID_51CHAR_"/>
	<bean id="101"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFileFactory"
		p:blockFactories-ref="DM16x16_TXT2L"
		p:extendedCodeFileNamePrefix="MY_DATA/MY_PILOT_DUTY_PAID_DIGITS_"/>
	<bean id="102"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFileFactory"
		p:blockFactories-ref="TXT2L_DM16x16" 
		p:extendedCodeFileNamePrefix="MY_DATA/MY_PILOT_DUTY_FREE_51CHAR_"/>
	<bean id="103"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFileFactory"
		p:blockFactories-ref="TXT2L_DM16x16" 
		p:extendedCodeFileNamePrefix="MY_DATA/MY_PILOT_DUTY_FREE_DIGITS_"/>
	<bean id="110"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFactory"
		p:blockFactories-ref="MY_PROP_0" />
	<bean id="111"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFactory"
		p:blockFactories-ref="MY_PROP_1" />
	<bean id="112"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFactory"
		p:blockFactories-ref="MY_PROP_2" />
	<bean id="113"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFactory"
		p:blockFactories-ref="MY_PROP_3" />
	<bean id="200"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFactory"
		p:blockFactories-ref="dsl_4mm" />
	<bean id="201"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFactory"
		p:blockFactories-ref="dsl_8mm" />
	<bean id="202"
		class="com.sicpa.standard.printer.xcode.ExtendedCodeFactory"
		p:blockFactories-ref="dsl_20mm" />

</beans>