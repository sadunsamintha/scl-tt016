	<bean id="driverLeibinger" class="com.sicpa.standard.printer.leibinger.driver.leibinger.LeibingerDriver">
		<property name="listener" ref="stdPrinterAdaptor"/>
		<property name="protocol" ref="protocol"/>
		<property name="model" ref="printerModelLeibinger"/>
		<property name="stateMachine" ref="stateMachineLeibinger"/>
	</bean>
	
	<bean id="codeBuffer" class="com.sicpa.standard.printer.leibinger.controller.LeibingerCodeBuffer">
		<property name="driver" ref="driverLeibinger" />
		<property name="printerModel" ref="printerModelLeibinger"/>
		<property name="listener" ref="stdPrinterAdaptor"/>
	</bean>
	
	<bean id="protocol" class="com.sicpa.standard.printer.leibinger.driver.leibinger.LeibingerProtocol">
		<property name="connector" ref="connector"/>
		<property name="model" ref="printerModelLeibinger"/>
		<property name="commander" ref="commander"/>
		<property name="buffer" ref="codeBuffer" />
		<property name="listener" ref="stdPrinterAdaptor"/>
	</bean>
	
	<bean id="stateMachineLeibinger" class="com.sicpa.standard.printer.leibinger.driver.leibinger.StateMachine">
		<property name="commander" ref="commander"/>
		<property name="model" ref="printerModelLeibinger"/>
	</bean>
	
	<bean id="commander" class="com.sicpa.standard.printer.leibinger.driver.leibinger.LeibingerCommander">
		<property name="connector" ref="connector"/>
		<property name="commandMap" ref="commandMap"/>
	</bean>
	
	<bean id="connector" factory-bean="mapEthernetConnector" factory-method="get">
		<constructor-arg value="${printer.leibinger.ethernet}"/>
	</bean>
	
	<bean id="mapEthernetConnector" class="com.sicpa.standard.client.common.ioc.GenericMapping">
		<constructor-arg>
			<map>
				<entry key="standard" value-ref="connectorStd" />
				<entry key="simulator" value-ref="connectorSimulator" />
			</map>
		</constructor-arg>
	</bean>
	
	<bean id="connectorStd" class="com.sicpa.standard.printer.leibinger.connector.impl.Connector">
		<property name="adaptor" ref="ethernetAdaptor"/>
		<property name="model" ref="printerModelLeibinger"/>
		<property name="listener" ref="printerControllerLeibinger"/>
	</bean>
	
	<bean id="ethernetAdaptor" class="com.sicpa.standard.printer.leibinger.connector.impl.EthernetAdaptor"/>
	
	<bean id="connectorSimulator" class="com.sicpa.standard.printer.leibinger.connector.impl.ConnectorSimulator" parent="connectorStd">
		<property name="protocol" ref="protocol"/>
		<property name="commandMap" ref="commandMap"/>
	</bean>

</beans>
