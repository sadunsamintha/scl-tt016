<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">


	<bean id="printerSimulatorAdaptor" class="${printerSimulatorAdaptor}" scope="prototype">
 		<constructor-arg ref="printerSimulatorController" />
	</bean>

    <bean id="printerSimulatorModel" class="com.sicpa.standard.sasscl.utils.ConfigUtilEx" factory-method="load" scope="prototype">
        <constructor-arg value="config/printer/simulator/printerSimulator_####.xml" />
        <constructor-arg ref="deviceModelNamePostfixProperty" />
    </bean>

    <bean id="printerSimulatorController" class="com.sicpa.standard.sasscl.devices.printer.simulator.PrinterSimulator" scope="prototype">
        <constructor-arg ref="printerSimulatorModel" />
        <property name="simulatorGui" ref="simulatorGui" />
    </bean>

</beans>