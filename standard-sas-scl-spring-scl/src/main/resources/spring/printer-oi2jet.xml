<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<!-- 	Beans created for each printer model -->

	<bean id="driverOi2jet" class="com.sicpa.standard.printer.oi2jet.driver.Oi2jetDriver"
		p:model-ref			="printerModelOi2jet"
		p:params-ref		="printerParameterOi2jet"
		p:protocol-ref		="printerProtocolOi2jet"
		p:connector-ref		="connectorOi2jet"
		p:buffer-ref		="codeBufferOi2jet"
		p:listener-ref		="stdPrinterAdaptor"
	/>

	<bean id="printerProtocolOi2jet" class="com.sicpa.standard.printer.oi2jet.driver.Oi2jetProtocol"
		p:commander-ref		="printerCommanderOi2jet"
	/>

	<bean id="printerCommanderOi2jet" class="com.sicpa.standard.printer.oi2jet.driver.Oi2jetCommander"
		p:connector-ref		="connectorOi2jet"
	/>

	<bean id="printerControllerOi2jet" class="com.sicpa.standard.printer.oi2jet.controller.Oi2jetPrinterController"
		p:driver-ref		="driverOi2jet"
		p:codeBuffer-ref	="codeBufferOi2jet"
		p:listener-ref		="stdPrinterAdaptor"
	/>

	<bean id="codeBufferOi2jet" class="com.sicpa.standard.printer.oi2jet.controller.Oi2jetCodeBuffer"
		p:driver-ref		="driverOi2jet"
		p:params-ref		="printerParameterOi2jet"
		p:listener-ref		="stdPrinterAdaptor"
	/>

	<bean id="connectorOi2jet" class="com.sicpa.standard.printer.oi2jet.connector.impl.ConnectorWithService"
		p:adaptor-ref		="usbAdaptorOi2jet"
		p:model-ref			="printerModelOi2jet"
		p:listener-ref		="printerControllerOi2jet"
	/>

	<bean id="usbAdaptorOi2jet" class="com.sicpa.standard.printer.oi2jet.connector.impl.UsbAdaptor"
		p:model-ref			="printerModelOi2jet"
		p:listener-ref		="driverOi2jet"
	/>


	<bean id="printerModelOi2jet" class="com.sicpa.standard.client.common.utils.ConfigUtils" factory-method="load" scope="prototype">
		<constructor-arg value="config/printer/printer_pr_oi2jet_model.xml" />
	</bean>
	<bean id="printerParameterOi2jet" class="com.sicpa.standard.client.common.utils.ConfigUtils" factory-method="load" scope="prototype">
		<constructor-arg value="config/printer/printer_pr_oi2jet_parameter.xml" />
	</bean>
		
</beans>

 