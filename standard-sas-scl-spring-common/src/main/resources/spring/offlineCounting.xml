<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="offlineCounting" class="com.sicpa.standard.sasscl.business.activation.offline.impl.PlcOfflineCounting">
		<property name="subsystemIdProvider" ref="subsystemIdProvider"/>
		<property name="plcProvider" ref="plcProvider" />
		<property name="productionParameters" ref="productionParameters" />
		<property name="quantityVarName" value="#{plcVarMap['OFFLINE_COUNTING_QTY']}" />
		<property name="lastStopTimeVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_STOP']}" />
		<property name="lastProductTimeVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_PRODUCT']}" />
		<property name="resetCountersVarName" value="#{plcVarMap['OFFLINE_RESET_COUNTERS']}" />
	</bean>

	<bean id="offlineCountingTrigger" class="com.sicpa.standard.sasscl.business.activation.offline.impl.PlcOfflineCountingTrigger">
		<constructor-arg ref="offlineCounting" />
	</bean>

</beans>
