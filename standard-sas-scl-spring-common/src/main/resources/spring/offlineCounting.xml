<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="offlineCounting" class="com.sicpa.standard.sasscl.business.activation.offline.impl.PlcOfflineCounting">
		<property name="subsystemIdProvider" ref="subsystemIdProvider"/>
		<property name="plcProvider" ref="plcProvider" />
		<property name="productionParameters" ref="productionParameters" />
		<property name="resetCountersVarName" value="#{plcVarMap['OFFLINE_RESET_COUNTERS']}" />
		<property name="plcOfflineCountingValuesProvider" ref="offlineCountingValuesProvider" />
	</bean>

	<bean id="offlineCountingValuesProvider" class="com.sicpa.standard.sasscl.business.activation.offline.impl.PlcOfflineCountingValuesProvider">
		<property name="plcProvider" ref="plcProvider" />

		<property name="quantityVarName" value="#{plcVarMap['OFFLINE_COUNTING_QTY']}" />

		<property name="lastStopYearVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_STOP_YEAR']}" />
		<property name="lastStopMonthVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_STOP_MONTH']}" />
		<property name="lastStopDayVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_STOP_DAY']}" />
		<property name="lastStopHourVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_STOP_HOUR']}" />
		<property name="lastStopMinuteVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_STOP_MINUTE']}" />
		<property name="lastStopSecondVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_STOP_SECOND']}" />

		<property name="lastProductYearVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_PRODUCT_YEAR']}" />
		<property name="lastProductMonthVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_PRODUCT_MONTH']}" />
		<property name="lastProductDayVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_PRODUCT_DAY']}" />
		<property name="lastProductHourVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_PRODUCT_HOUR']}" />
		<property name="lastProductMinuteVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_PRODUCT_MINUTE']}" />
		<property name="lastProductSecondVarName" value="#{plcVarMap['OFFLINE_COUNTING_LAST_PRODUCT_SECOND']}" />
	</bean>

	<bean id="offlineCountingTrigger" class="com.sicpa.standard.sasscl.business.activation.offline.impl.PlcOfflineCountingTrigger">
		<constructor-arg ref="offlineCounting" />
	</bean>

</beans>
