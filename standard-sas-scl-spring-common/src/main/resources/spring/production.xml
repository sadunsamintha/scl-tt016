<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<bean id="production" class="${production}">
		<constructor-arg ref="storage" />
		<constructor-arg ref="remoteServer" />
		<property name="productsPackager" ref="productsPackager" />
		<property name="subsystemIdProvider" ref="subsystemIdProvider" />
		<property name="productionSendBatchSize" value="${productionSendBatchSize}" />
		<property name="productionDataSerializationErrorThreshold" value="${productionDataSerializationErrorThreshold}" />
	</bean>

</beans>


