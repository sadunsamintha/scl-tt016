<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="securityModel" class="${securityModel}">
		<constructor-arg value="${profile.path}/config/security.xml" />
	</bean>

	<bean id="securityController" class="${securityController}">
		<constructor-arg ref="securityModel" />
	</bean>

	<bean
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod"
			value="com.sicpa.standard.client.common.security.SecurityService.set" />
		<property name="arguments">
			<list>
				<ref bean="securityController" />
			</list>
		</property>
	</bean>

</beans>


