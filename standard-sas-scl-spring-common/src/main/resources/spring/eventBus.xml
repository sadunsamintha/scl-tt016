<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="eventBus" class="com.sicpa.standard.sasscl.eventbus.EventBusWithUncaughtExceptionHandling" />

	<bean id="deadEventListener" class="com.sicpa.standard.client.common.eventbus.impl.DeadEventListener" />

	<bean id="registerDeadEventListener" class="com.sicpa.standard.client.common.ioc.InjectByMethodBean">
		<property name="target" ref="eventBus" />
		<property name="methodName" value="register" />
		<property name="params" ref="deadEventListener" />
	</bean>

	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod" value="com.sicpa.standard.client.common.eventbus.service.EventBusService.set" />
		<property name="arguments">
			<list>
				<ref bean="eventBus" />
			</list>
		</property>
	</bean>

</beans>
