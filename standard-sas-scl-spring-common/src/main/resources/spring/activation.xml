<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="activation" class="com.sicpa.standard.sasscl.business.activation.impl.ActivationWithPostPackage">
		<property name="activationBehaviorProvider" ref="activationBehaviorProvider" />
		<property name="productionBatchProvider" ref="productionBatchProvider" />
	</bean>


	<bean id="noProductValidator"
		  class="com.sicpa.standard.sasscl.business.activation.impl.activationBehavior.standard.validator.NoProductValidator">
	</bean>

	<bean id="productValidatorCodeTypeCheck"
		  class="com.sicpa.standard.sasscl.business.activation.impl.activationBehavior.standard.validator.CodeTypeValidator">
		<property name="productionParameters" ref="productionParameters" />
	</bean>

	<bean id="activationInvalidCodeHandler" class="com.sicpa.standard.sasscl.business.activation.impl.activationBehavior.standard.invalidCode.DefaultActivationInvalidCodeHandler" />
	<bean id="productFinalizer" class="com.sicpa.standard.sasscl.business.activation.impl.activationBehavior.standard.finalize.DefaultProductFinalizerBehavior" />

	<bean id="standardActivationBehavior"
		  class="com.sicpa.standard.sasscl.business.activation.impl.activationBehavior.standard.StandardActivationBehavior">
		<property name="productionParameters" ref="productionParameters" />
		<property name="authenticatorProvider" ref="authenticatorProvider" />
		<property name="productValidator" ref="noProductValidator" />
		<property name="invalidCodeHandler" ref="activationInvalidCodeHandler" />
		<property name="productFinalizer" ref="productFinalizer" />
		<property name="authenticatorModeProvider" ref="authenticatorModeProvider" />
		<property name="productionConfigProvider" ref="productionConfigProvider" />
	</bean>

	<bean id="standardActivationBehaviorCodeTypeCheck" parent="standardActivationBehavior">
		<property name="productValidator" ref="productValidatorCodeTypeCheck" />
	</bean>

	<bean id="exportActivationBehavior" class="com.sicpa.standard.sasscl.business.activation.impl.activationBehavior.ExportActivationBehavior">
		<property name="productionParameters" ref="productionParameters" />
		<property name="blobDetectionUtils" ref="blobDetectionUtils" />

	</bean>

	<bean id="maintenanceActivationBehavior" class="com.sicpa.standard.sasscl.business.activation.impl.activationBehavior.MaintenanceActivationBehavior">
		<property name="productionParameters" ref="productionParameters" />
	</bean>

	<bean id="countingActivationBehavior" class="com.sicpa.standard.sasscl.business.activation.impl.activationBehavior.CountingActivationBehavior">
		<property name="productionParameters" ref="productionParameters" />
	</bean>

	<bean id="refeedActivationBehavior"
		  class="com.sicpa.standard.sasscl.business.activation.impl.activationBehavior.RefeedActivationBehavior">
		<property name="productionParameters" ref="productionParameters" />
		<property name="authenticatorProvider" ref="authenticatorProvider" />
		<property name="productValidator" ref="noProductValidator" />
		<property name="invalidCodeHandler" ref="activationInvalidCodeHandler" />
		<property name="productFinalizer" ref="productFinalizer" />
		<property name="authenticatorModeProvider" ref="authenticatorModeProvider" />
		<property name="productionConfigProvider" ref="productionConfigProvider" />
		<property name="productionBehaviorVar" value="${production.config.folder}" />
	</bean>

	<bean id="refeedActivationBehaviorCodeTypeCheck" parent="refeedActivationBehavior">
		<property name="productValidator" ref="productValidatorCodeTypeCheck" />
	</bean>

	<bean id="blobDetectionUtils" class="com.sicpa.standard.sasscl.devices.camera.blobDetection.BlobDetectionUtils">
		<constructor-arg ref="blobDetectionProvider"/>
	</bean>
	<bean id="blobDetectionProvider" class="com.sicpa.standard.sasscl.devices.camera.blobDetection.BlobDetectionSKUProvider">
		<constructor-arg ref="productionParameters" />
		<constructor-arg value="${blobDetection.mode}" />
		<constructor-arg value="${blobDetection.printed}" />
	</bean>


</beans>


