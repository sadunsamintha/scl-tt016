<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	
	<bean id="abstractIntVarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcIntegerVariableDescriptor" abstract="true">
		<property name="min" value="1" />
		<property name="max" value="999999" />
		<property name="plcProvider" ref="plcSecureProvider" />
	</bean>
	
	<bean id="abstractBoolVarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcBooleanVariableDescriptor" abstract="true">
		<property name="plcProvider" ref="plcSecureProvider" />
	</bean>
	
	<bean id="abstractSecReqVarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcSecureReqVarDescriptor" abstract="true">
		<property name="plcProvider" ref="plcSecureProvider" />
	</bean>

	<bean id="plcSecureEditablePlcVariables" class="com.sicpa.standard.sasscl.devices.plc.variable.EditablePlcVariables">
		<constructor-arg ref="plcSecureVariableValues" />

		<constructor-arg>
			<array>
				<bean class="com.sicpa.standard.sasscl.devices.plc.variable.PlcVariableGroup">
					<constructor-arg>
						<array>
							<bean p:variable-ref="lSMIntervalTimeForEvidences" parent="abstractIntVarDesc" /> 
							<bean p:variable-ref="activeIJC"                   parent="abstractBoolVarDesc"/> 
							<bean p:variable-ref="activeIJC2"                  parent="abstractBoolVarDesc"/> 
							<bean p:variable-ref="activeIJC3"                  parent="abstractBoolVarDesc"/>
							<bean p:variable-ref="timeUnlockEC"                parent="abstractIntVarDesc" />
							<bean p:variable-ref="timeUnlockIJC"               parent="abstractIntVarDesc" />
							<bean p:variable-ref="timeUnlockIJCD2"             parent="abstractIntVarDesc" /> 
							<bean p:variable-ref="timeUnlockIJCD3"             parent="abstractIntVarDesc" /> 
						</array>
					</constructor-arg>
					<property name="description" value="plc.secure.module.config" />
				</bean>
				
				<bean class="com.sicpa.standard.sasscl.devices.plc.variable.PlcVariableGroup">
					<constructor-arg>
						<array>
							<bean c:_0="OPEN_ELECTRICAL_CABINET"		 parent="abstractSecReqVarDesc"/> 
							<bean c:_0="OPEN_PRINTER_CABINET"			 parent="abstractSecReqVarDesc"/> 
							<bean c:_0="OPEN_DEPORTED_PRINTER_CABINET"	 parent="abstractSecReqVarDesc"/> 
							<bean c:_0="REBOOT_SECURE_SYSTEM"			 parent="abstractSecReqVarDesc"/>
							<bean c:_0="LSM_TAKE_PICTURE"				 parent="abstractSecReqVarDesc"/>
							<bean c:_0="SECURITY_ALARM"					 parent="abstractSecReqVarDesc"/>
						</array>
					</constructor-arg>
					<property name="description" value="plc.secure.module.requests" />
				</bean>
			</array>
		</constructor-arg>

		<property name="file" value="config/plc/plcSecureParams.xml" />

	</bean>
</beans>