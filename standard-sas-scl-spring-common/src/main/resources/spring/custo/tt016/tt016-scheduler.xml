<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:task="http://www.springframework.org/schema/task"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd">
	
	<task:scheduled-tasks scheduler="PlcNoCapProducerEjectionStatistics">
		<task:scheduled ref="plcNoCapProductStatisticsManager" method="updateNoCapProductCount" fixed-delay="#{${getNoCapProducerCount_sec}*1000}" />
	</task:scheduled-tasks>
	
	<task:scheduler id="PlcNoCapProducerEjectionStatistics" pool-size="1" />
	
	<task:scheduled-tasks scheduler="PlcPersistentGrossNetProductCounterManager">
		<task:scheduled ref="plcPersistentGrossNetProductCounterManager" method="log" fixed-delay="#{${getGrossNetProductCount_sec}*1000}" />
	</task:scheduled-tasks>
	
	<task:scheduler id="PlcPersistentGrossNetProductCounterManager" pool-size="1" />

</beans>
