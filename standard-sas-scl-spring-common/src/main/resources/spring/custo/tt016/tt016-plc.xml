<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="plcCameraProductStatusListener"
          class="com.sicpa.tt016.devices.plc.PlcCameraProductStatusListener" init-method="init">
        <property name="plcProvider" ref="plcProvider" />
        <property name="plcCameraProductStatusNtfVarName" value="#{plcVarMap['NTF_LINE_JAVA_PRODUCT_STATUS']}" />
    </bean>

    <bean id="plcCameraResultIndexManager" class="com.sicpa.tt016.devices.plc.PlcCameraResultIndexManager">
        <property name="plcProvider" ref="plcProvider" />
        <property name="plcCameraProductStatusNtfVarName" value="#{plcVarMap['NTF_LINE_JAVA_PRODUCT_STATUS']}" />
    </bean>

    <bean id="plcPersistentProductCounterManager" class="com.sicpa.tt016.devices.plc.PlcPersistentProductCounterManager">
        <property name="plcProvider" ref="plcProvider" />
        <property name="productionParameters" ref="productionParameters" />
        <property name="subsystemIdProvider" ref="subsystemIdProvider" />
        <property name="javaProductCounterNtfVarName" value="#{plcVarMap['NTF_LINE_JAVA_PRODUCT_COUNTER']}" />
        <property name="javaEjectionCounterNtfVarName" value="#{plcVarMap['NTF_LINE_JAVA_EJECTION_COUNTER']}" />
        <property name="resetJavaProductCounterVarName" value="#{plcVarMap['REQUEST_RESET_JAVA_PRODUCT_COUNTER']}" />
    </bean>
    
    <bean id="plcPersistentGrossNetProductCounterManager" class="com.sicpa.tt016.devices.plc.PlcPersistentGrossNetProductCounterManager">
        <property name="plcProvider" ref="plcProvider" />
        <property name="productionParameters" ref="productionParameters" />
        <property name="subsystemIdProvider" ref="subsystemIdProvider" />
        <property name="getGrossNetProductCount_enabled" value="${getGrossNetProductCount_enabled}" />
        <property name="javaProductCounterNtfVarName" value="#{plcVarMap['NTF_LINE_JAVA_PRODUCT_COUNTER']}" />
        <property name="javaEjectionCounterNtfVarName" value="#{plcVarMap['NTF_LINE_JAVA_EJECTION_COUNTER']}" />
        <property name="resetJavaProductCounterVarName" value="#{plcVarMap['REQUEST_RESET_JAVA_PRODUCT_COUNTER']}" />
    </bean>
    
    <bean id="plcNoCapProductStatisticsManager" class="com.sicpa.tt016.devices.plc.PlcNoCapProductStatisticsManager">
    	<property name="plcProvider" ref="plcProvider" />
    	<property name="productionParameters" ref="productionParameters" />
    	<property name="batchIdProvider" ref="productionBatchProvider" />
    	<property name="subsystemIdProvider" ref="subsystemIdProvider" />
    	<property name="plcNoCapProductNtfVarName" value="#{plcVarMap['NTF_LINE_NO_CAP_TRIGS']}" />
    </bean>

    <bean id="automatedBeamHeightManager" class="com.sicpa.standard.sasscl.devices.plc.AutomatedBeamHeightManager">
        <property name="plcParamSender" ref="plcParamSender" />
        <property name="plcProvider" ref="plcProvider" />
        <property name="productionParameters" ref="productionParameters"/>
    </bean>

    <bean id="automatedBeamNtfHandler" class="com.sicpa.standard.sasscl.devices.plc.AutomatedBeamNtfHandler">
        <property name="plcProvider" ref="plcProvider" />
        <property name="plcVariableMap" ref="plcVarMap" />
    </bean>

</beans>