<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="activationCodeFilter" class="com.sicpa.tt016.business.activation.NoActionBeforeActivation">
    </bean>
    
    <bean id="productStatusMergerSAS" class="com.sicpa.tt016.controller.flow.ProductStatusMergerSAS" parent="standardActivationBehavior">
        <property name="plcCameraResultIndexManager" ref="plcCameraResultIndexManager"/>
        <property name="productionBatchProvider" ref="productionBatchProvider"/>
        <property name="blobDetectionUtils" ref="blobDetectionUtils" />
        <property name="qrCodeActivation" value="${sas.qrcode.type.activation}" />
    </bean>

    <bean id="TT016RefeedActivationBehavior" class="com.sicpa.tt016.activation.TT016RefeedActivationBehavior">
        <property name="productionParameters" ref="productionParameters" />
        <property name="blobDetectionUtils" ref="blobDetectionUtils" />
    </bean>

</beans>