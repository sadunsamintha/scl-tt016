<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="stopReasonView" class="com.sicpa.tt016.view.selection.stop.StopReasonView">
        <property name="controller" ref="stopReasonViewController"/>
    </bean>

    <bean id="stopReasonViewController" class="com.sicpa.tt016.view.selection.stop.StopReasonViewController">
        <property name="view" ref="stopReasonView" />
        <property name="viewController" ref="mainFrameController" />
        <property name="screensFlow" ref="screensFlow"/>
        <property name="flowControl" ref="flowControl"/>
    </bean>

</beans>