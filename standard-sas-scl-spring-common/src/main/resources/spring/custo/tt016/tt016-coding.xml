<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<bean id="coding" class="com.sicpa.tt016.scl.business.coding.impl.TT016Coding">
		<constructor-arg ref="storage" />
		<property name="productionParameters" ref="productionParameters" />
	</bean>


	<!-- encoder validators -->
	<bean id="encoderSubsystemIdValidator" class="com.sicpa.standard.sasscl.business.coding.validator.EncoderSubsystemIdValidator">
		<property name="subsystemIdProvider" ref="subsystemIdProvider" />
	</bean>

	<bean id="codingAddEncoderValidatorSubsystemIdValidator" class="com.sicpa.standard.client.common.ioc.InjectByMethodBean">
		<property name="target" ref="coding" />
		<property name="methodName" value="addEncoderValidator" />
		<property name="params" ref="encoderSubsystemIdValidator" />
	</bean>
</beans>
