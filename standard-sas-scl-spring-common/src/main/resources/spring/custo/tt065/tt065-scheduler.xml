<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:task="http://www.springframework.org/schema/task"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd">

    <bean id="plcVersionLogger" class="com.sicpa.tt065.devices.plc.PLcVersionLogger">
        <property name="plcProvider" ref="plcProvider" />
    </bean>

    <bean id="blobDetectionEnableLog" class="com.sicpa.standard.sasscl.devices.camera.blobDetection.BlobDetectionEnableLogger">
        <property name="blobDetectionProvider" ref="blobDetectionProvider" />
    </bean>

    <task:scheduled-tasks scheduler="SchedulerSasScl">
        <task:scheduled ref="plcVersionLogger" method="logPLCVersion" fixed-delay="#{${plcVersionLoggerTimer_sec}*1000}" />
        <task:scheduled ref="blobDetectionEnableLog" method="logBlobDetectionEnable" fixed-delay="#{${blobDetectionEnableTimer_sec}*1000}" />
    </task:scheduled-tasks>

</beans>