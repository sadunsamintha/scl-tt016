<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<!--BLOB UTILITIES -->

	<bean id="blobUtils" class="com.sicpa.tt018.scl.utils.AlbaniaBlobUtils">
		<property name="productionParameters" ref="productionParameters" />
		<property name="isBlobAlwaysEnable" value="${blob.detection.enable.always}" />
	</bean>

	<bean id="compliantProduct" class="com.sicpa.standard.sasscl.devices.brs.skuCheck.AlbaniaCompliantProductSkuResolver" />

	<!-- PRINTER -->
	<bean id="mappingExtendedCodeBehavior" class="com.sicpa.standard.sasscl.devices.printer.xcode.mapping.MappingExtendedCodeBehavior">
		<property name="defaultBehavior" ref="tt018ExtendedCodeBehavior" />
	</bean>

	<bean id="tt018ExtendedCodeBehavior" class="com.sicpa.tt018.scl.devices.printer.TT018ExtendedCodeFactory">
		<property name="dmFormat" value="${dm.format}" />
		<property name="dmEncoding" value="${dm.encoding}" />
		<property name="blobPosition" value="${blob.position}" />
		<property name="blobType" value="${blob.type}" />
		<property name="blobUtils" ref="blobUtils" />
	</bean>

	<!--CAMERA -->

	<bean id="alertCameraCount" class="com.sicpa.tt018.scl.camera.alert.AlbaniaCameraCountAlertTask">
		<property name="model">
			<bean id="alertCameraCountModel" class="com.sicpa.standard.sasscl.business.alert.task.model.CameraCountAlertTaskModel">
				<property name="enabled" value="${alert.cameraCount.enabled}" />
				<property name="maxUnreadCount" value="${alert.cameraCount.maxUnreadCount}" />
				<property name="sampleSize" value="${alert.cameraCount.sampleSize}" />
				<property name="delayInSec" value="${alert.cameraCount.delayInSec}" />
			</bean>
		</property>
		<property name="productionParameters" ref="productionParameters" />
		<property name="blobUtils" ref="blobUtils" />
	</bean>

	<bean id="brsSkuCheck" class="com.sicpa.standard.sasscl.devices.brs.sku.CompliantProductSkuResolver">
	</bean>

	<!-- POST PACKGE BEHAVIOUR -->

	<bean id="postPackageBehavior" class="com.sicpa.tt018.scl.business.postPackage.AlbaniaPostPackageBehavior" scope="prototype">
		<property name="batchIdProvider" ref="productionBatchProvider" />
		<property name="subsystemIdProvider" ref="subsystemIdProvider" />
		<property name="productionParameters" ref="productionParameters" />
		<property name="authenticatorProvider" ref="authenticatorProvider" />
		<property name="authenticatorModeProvider" ref="authenticatorModeProvider" />
		<property name="blobUtils" ref="blobUtils" />
	</bean>

	<bean id="softDrinkActivationBehaviour" class="com.sicpa.tt018.scl.business.activation.impl.AlbaniaSCLSoftDrinkActivationBehavior"
		scope="prototype">
		<property name="productionParameters" ref="productionParameters" />
	</bean>


</beans>