<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="mappingExtendedCodeBehavior" class="com.sicpa.standard.sasscl.devices.printer.xcode.mapping.MappingExtendedCodeBehavior">
        <property name="defaultBehavior" ref="tt084DmAndHRDExtendedCodeBehavior" />
    </bean>

    <bean id="tt084DmAndHRDExtendedCodeBehavior" class="com.sicpa.tt084.printer.TT084ExtendedCodeFactory" >
        <property name="dmFormat" value="${dm.format}" />
        <property name="dmEncoding" value="${dm.encoding}" />
        <property name="blobPosition" value="${blob.position}" />
        <property name="text1Length" value="${text1.length}" />
        <property name="text1Position" value="${text1.position}" />
        <property name="text2Length" value="${text2.length}" />
        <property name="text2Position" value="${text2.position}" />
        <property name="blobUtils" ref="blobDetectionUtils" />
        <property name="hrdEnable" value="${hrd.enable}" />
    </bean>

</beans>