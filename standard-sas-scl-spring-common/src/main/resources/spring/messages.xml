<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="messagesMapping" class="com.sicpa.standard.sasscl.messages.SASDefaultMessagesMapping" init-method="init">
		<property name="overridingProperties" ref="allProperties" />
	</bean>

	<bean id="messagesHandler" class="com.sicpa.standard.sasscl.controller.message.MessagesHandler">
		<property name="messagesMapping" ref="messagesMapping" />
	</bean>

	<bean id="warningHandler" class="com.sicpa.standard.sasscl.controller.message.MessageHandlerWarning" />


	<bean id="ignoreHandler" class="com.sicpa.standard.sasscl.controller.message.MessageHandlerIgnore" />
	<bean id="logHandler" class="com.sicpa.standard.sasscl.controller.message.MessageHandlerLog" />

	<bean id="errorHandler" class="com.sicpa.standard.sasscl.controller.message.MessageHandlerError">
		<property name="flowControl" ref="flowControl" />
	</bean>
	<bean id="errorDisplayHandler" class="com.sicpa.standard.sasscl.controller.message.MessageHandlerErrorDisplay" />

</beans>
