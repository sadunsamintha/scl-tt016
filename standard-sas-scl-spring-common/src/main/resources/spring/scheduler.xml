<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:task="http://www.springframework.org/schema/task"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd">



	<bean id="remoteServerSheduledJobs" class="${remoteServerSheduledJobs}">
		<constructor-arg ref="storage" />
		<constructor-arg ref="remoteServer" />
		<constructor-arg ref="skuListProvider" />
		<constructor-arg ref="authenticatorProvider" />
		<property name="remoteServerMaxDownTime_day" value="${remoteServerMaxDownTime_day}" />
	</bean>



	<task:scheduled-tasks scheduler="SchedulerSasScl">
		<task:scheduled ref="production" method="saveProductionData" fixed-delay="#{schedulerConfig.productionSerializationTimer_sec*1000}" />

		<task:scheduled ref="production" method="packageProduction" fixed-delay="#{schedulerConfig.packagedProductTimer_sec*1000}" />

		<task:scheduled ref="production" method="sendAllProductionData" fixed-delay="#{schedulerConfig.productionSendTimer_sec*1000}" />

		<task:scheduled ref="storage" method="cleanUpOldSentProduction" fixed-delay="#{schedulerConfig.storageProductionCleanUp_sec*1000}" />

		<task:scheduled ref="remoteServerSheduledJobs" method="getAuthenticatorFromRemoteServer"
			fixed-delay="#{schedulerConfig.getAuthenticathorTimer_sec*1000}" />

		<task:scheduled ref="remoteServerSheduledJobs" method="getProductionParametersFromRemoteServer"
			fixed-delay="#{schedulerConfig.getProductionParametersTimer_sec*1000}" />

		<task:scheduled ref="remoteServerSheduledJobs" method="getLanguageFileFromRemoteServer"
			fixed-delay="#{schedulerConfig.getLanguageFilesTimer_sec*1000}" />

		<task:scheduled ref="remoteServerSheduledJobs" method="checkRemoteServerMaxDownTime"
			fixed-delay="#{schedulerConfig.maxRemoteServerDownTimeTimer_sec*1000}" />

		<task:scheduled ref="statistics" method="saveStatistics" fixed-delay="#{schedulerConfig.saveStatisticsTimer_sec*1000}" />

		<task:scheduled ref="remoteServerSheduledJobs" method="sendGlobalMonitoringToolInfo"
			fixed-delay="#{schedulerConfig.globalMonitoringToolSendInfoTimer_sec*1000}" />

	</task:scheduled-tasks>

	<task:scheduler id="SchedulerSasScl" pool-size="10" />

	<bean id="schedulerConfig" class="${schedulerConfig}" scope="prototype">
		<constructor-arg value="config/scheduler.xml" />
	</bean>

</beans>
