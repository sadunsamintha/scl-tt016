<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="encoderPasswordProvider" class="com.sicpa.standard.sicpadata.spi.password.UniquePasswordProvider">
		<constructor-arg value="${sicpadataPassword}" />
	</bean>

	<bean id="cryptoProviderManager" class="com.sicpa.standard.sasscl.sicpadata.CryptoServiceProviderManager">
		<constructor-arg ref="encoderPasswordProvider" />
		<constructor-arg ref="fileSequenceStorageProvider" />
		<constructor-arg value="${profile.path}" />
	</bean>

	<bean id="fileSequenceStorageProvider" class="com.sicpa.standard.sasscl.sicpadata.generator.FileSequenceStorageProvider">
		<constructor-arg value="${profile.path}/internal/encoders/sequence" />
	</bean>


</beans>