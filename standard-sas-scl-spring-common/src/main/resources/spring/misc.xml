<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="exceptionHandler" class="com.sicpa.standard.sasscl.common.exception.ExceptionHandler" />

	<bean id="eventBusAutoRegistering" class="com.sicpa.standard.client.common.eventbus.service.AutoEventBusRegistering" />

	<bean id="productionParameters" class="com.sicpa.standard.sasscl.model.ProductionParameters" />

	<bean id="implementationProvider" class="com.sicpa.standard.sasscl.controller.productionconfig.factory.utils.SpringImplementationProvider" />

	<bean id="codeTypeFilterFactory" class="com.sicpa.standard.sasscl.filter.DefaultCodeTypeFilterFactory">
		<property name="codeTypesToFilter">
			<bean class="com.sicpa.standard.sasscl.utils.StringUtils" factory-method="commaDelimitedListToList">
				<constructor-arg type="java.lang.String" value="${codetype.filter}"/>
			</bean>
		</property>
	</bean>

</beans>
