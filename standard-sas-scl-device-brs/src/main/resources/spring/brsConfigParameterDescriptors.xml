<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<!-- variables list -->
	<util:list id="brsConfigDescriptorsList">
		<ref bean="configBrsDifferenceCountThresholdDescriptor" />
		<ref bean="configBrsUnreadThresholdDescriptor" />
		<ref bean="configBrsUnreadWindowSizeDescriptor" />
	</util:list>

	<!-- descriptors -->
	<bean id="configBrsDifferenceCountThresholdDescriptor" class="com.sicpa.standard.client.common.descriptor.impl.RangeIntegerPropertyDescriptor">
		<property name="min" value="0" />
		<property name="max" value="999999" />
		<property name="step" value="1" />
		<property name="property" value="differenceCountThreshold" />
		<property name="propertyDescription" value="differenceCountThreshold" />
		<property name="enabledWhenProductionRunning" value="true" />
	</bean>

	<bean id="configBrsUnreadThresholdDescriptor" class="com.sicpa.standard.client.common.descriptor.impl.RangeIntegerPropertyDescriptor">
		<property name="min" value="0" />
		<property name="max" value="999999" />
		<property name="step" value="1" />
		<property name="property" value="unreadThreshold" />
		<property name="propertyDescription" value="unreadThreshold %" />
		<property name="enabledWhenProductionRunning" value="true" />
	</bean>

	<bean id="configBrsUnreadWindowSizeDescriptor" class="com.sicpa.standard.client.common.descriptor.impl.RangeIntegerPropertyDescriptor">
		<property name="min" value="0" />
		<property name="max" value="999999" />
		<property name="step" value="1" />
		<property name="property" value="unreadWindowSize" />
		<property name="propertyDescription" value="unreadWindowSize" />
		<property name="enabledWhenProductionRunning" value="true" />
	</bean>

	<bean id="brsConfigParametersValues" class="com.sicpa.standard.client.common.utils.ConfigUtils" factory-method="load">
		<constructor-arg value="config/skuCheck/brs.xml" />
	</bean>

	<!-- brs config -->
	<bean id="brsDescriptorWrapper" class="com.sicpa.standard.client.common.descriptor.DescriptorWrapper">
		<property name="key" value="label.brsConfig" />
		<property name="bean" ref="brsConfigParametersValues" />
		<property name="descriptors" ref="brsConfigDescriptorsList" />
		<property name="visible" value="true" />
	</bean>

	<!-- Adding BRS Config To Model Editable Properties -->
	<bean id="addBrsConfigToModelEditableProperties" class="com.sicpa.standard.client.common.ioc.InjectByMethodBean">
		<property name="target" ref="modelEditableProperties" />
		<property name="methodName" value="add" />
		<property name="params" ref="brsDescriptorWrapper" />
	</bean>

</beans>
