<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<util:list id="brsPlcParameters">
		<ref bean="brsPlcLineTypeVar" />
		<ref bean="brsPlcDistance1Var" />
		<ref bean="brsPlcDistance2Var" />
		<ref bean="brsPlcDistanceType1Var" />
		<ref bean="brsPlcDistanceType2Var" />
		<ref bean="brsPlcCoderSignal1Var" />
		<ref bean="brsPlcCoderSignal2Var" />
		<ref bean="brsPlcSamplingPeriodVar" />
		<ref bean="brsPlcNotificationCntVar" />
		<ref bean="brsPlcOfflineEnabledVar" />
		<ref bean="brsPlcSensorLow1Var" />
		<ref bean="brsPlcSensorLow2Var" />
		<ref bean="brsConsecutiveBadCodeParam" />
		<ref bean="brsPercentUnreadWarParam" />
		<ref bean="brsPercentUnreadErrParam" />
		<ref bean="brsNbSamplesUnreadParam" />
		<ref bean="brsNCoderDiameter1"/>
		<ref bean="brsNCoderDiameter2"/>
		<ref bean="brsNCoderResolution1"/>
		<ref bean="brsNCoderResolution2"/>
	</util:list>

	<bean id="brsPlcLineTypeVar" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createInt32Var">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_LINE_TYPE']}" />
	</bean>

	<bean id="brsPlcDistance1Var" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createInt32Var">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_DISTANCE1']}" />
	</bean>

	<bean id="brsPlcDistance2Var" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createInt32Var">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_DISTANCE2']}" />
	</bean>

	<bean id="brsPlcDistanceType1Var" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createBooleanVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_DISTANCE_TYPE1']}" />
	</bean>

	<bean id="brsPlcDistanceType2Var" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createBooleanVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_DISTANCE_TYPE2']}" />
	</bean>

	<bean id="brsPlcCoderSignal1Var" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createInt32Var">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_CODER_SIGNAL1']}" />
	</bean>

	<bean id="brsPlcCoderSignal2Var" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createInt32Var">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_CODER_SIGNAL2']}" />
	</bean>

	<bean id="brsPlcSensorLow1Var" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createBooleanVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_SENSOR_LOW1']}" />
	</bean>

	<bean id="brsPlcSensorLow2Var" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createBooleanVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_SENSOR_LOW2']}" />
	</bean>

	<bean id="brsPlcSamplingPeriodVar" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createInt32Var">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_SAMPLING_PERIOD']}" />
	</bean>

	<bean id="brsPlcNotificationCntVar" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createInt32Var">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_NOTIFICATION_COUNTER']}" />
	</bean>

	<bean id="brsPlcOfflineEnabledVar" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createBooleanVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_OFFLINE_ENABLED']}" />
	</bean>

	<bean id="brsConsecutiveBadCodeParam" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createShortVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_NB_CONSECUTIVE_BAD_CODE']}" />
	</bean>

	<bean id="brsPercentUnreadWarParam" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createShortVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_PERCENT_UNREAD_WAR']}" />
	</bean>

	<bean id="brsPercentUnreadErrParam" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createShortVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_PERCENT_UNREAD_ERR']}" />
	</bean>

	<bean id="brsNbSamplesUnreadParam" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createShortVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_NB_SAMPLES_UNREAD']}" />
	</bean>
	
	<bean id="brsNCoderDiameter1" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createShortVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_NCODER_DIAM_1']}" />
	</bean>
	<bean id="brsNCoderDiameter2" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createShortVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_NCODER_DIAM_2']}" />
	</bean>
	<bean id="brsNCoderResolution1" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createShortVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_NCODER_RESOLUTION_1']}" />
	</bean>
	<bean id="brsNCoderResolution2" class="com.sicpa.standard.plc.value.PlcVariable"
		factory-method="createShortVar">
		<constructor-arg value="#{plcVarMap['PARAM_BRS_NCODER_RESOLUTION_2']}" />
	</bean>

</beans>