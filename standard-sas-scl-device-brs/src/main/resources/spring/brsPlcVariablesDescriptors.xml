<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="brsPlcLineTypeVarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcIntegerVariableDescriptor">
		<property name="variable" ref="brsPlcLineTypeVar" />
		<property name="min" value="0" />
		<property name="max" value="6" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>

	<bean id="brsPlcDistance1VarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcPulseVariableDescriptor">
		<property name="unitPlcVar" ref="brsPlcDistanceType1Var" />
		<property name="variable" ref="brsPlcDistance1Var" />
		<property name="minMs" value="0" />
		<property name="maxMs" value="999999" />
		<property name="minPulse" value="1" />
		<property name="maxPulse" value="888888" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	<bean id="brsPlcDistance2VarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcPulseVariableDescriptor">
		<property name="unitPlcVar" ref="brsPlcDistanceType2Var" />
		<property name="variable" ref="brsPlcDistance2Var" />
		<property name="minMs" value="0" />
		<property name="maxMs" value="999999" />
		<property name="minPulse" value="1" />
		<property name="maxPulse" value="888888" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>



	<bean id="brsPlcSamplingPeriodVarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcIntegerVariableDescriptor">
		<property name="variable" ref="brsPlcSamplingPeriodVar" />
		<property name="min" value="1" />
		<property name="max" value="100" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>

	<bean id="brsPlcNotificationCntVarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcIntegerVariableDescriptor">
		<property name="variable" ref="brsPlcNotificationCntVar" />
		<property name="min" value="1" />
		<property name="max" value="100" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>

	
	<bean id="configBrsConsecutiveBadCodeThresholdDescriptor" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcShortVariableDescriptor">
		<property name="variable" ref="brsConsecutiveBadCodeParam" />
		<property name="min" value="1" />
		<property name="max" value="10000" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	
	<bean id="configPercentUnreadWarDescriptor" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcShortVariableDescriptor">
		<property name="variable" ref="brsPercentUnreadWarParam" />
		<property name="min" value="1" />
		<property name="max" value="100" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	
	<bean id="configPercentUnreadErrDescriptor" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcShortVariableDescriptor">
		<property name="variable" ref="brsPercentUnreadErrParam" />
		<property name="min" value="1" />
		<property name="max" value="100" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	
	<bean id="configNbSamplesUnreadDescriptor" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcShortVariableDescriptor">
		<property name="variable" ref="brsNbSamplesUnreadParam" />
		<property name="min" value="1" />
		<property name="max" value="10000" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	
	<bean id="brsNCoderDiameter1Descriptor" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcShortVariableDescriptor">
		<property name="variable" ref="brsNCoderDiameter1" />
		<property name="min" value="1" />
		<property name="max" value="10000" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	<bean id="brsNCoderDiameter2Descriptor" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcShortVariableDescriptor">
		<property name="variable" ref="brsNCoderDiameter2" />
		<property name="min" value="1" />
		<property name="max" value="10000" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	
	<bean id="brsNCoderResolution1Descriptor" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcShortVariableDescriptor">
		<property name="variable" ref="brsNCoderResolution1" />
		<property name="min" value="1" />
		<property name="max" value="10000" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	<bean id="brsNCoderResolution2Descriptor" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcShortVariableDescriptor">
		<property name="variable" ref="brsNCoderResolution2" />
		<property name="min" value="1" />
		<property name="max" value="10000" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	
	<bean id="brsPlcSensorLow1VarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcBooleanVariableDescriptor">
		<property name="variable" ref="brsPlcSensorLow1Var" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>
	<bean id="brsPlcSensorLow2VarDesc" class="com.sicpa.standard.sasscl.devices.plc.variable.descriptor.PlcBooleanVariableDescriptor">
		<property name="variable" ref="brsPlcSensorLow2Var" />
		<property name="plcProvider" ref="plcProvider" />
	</bean>	
	
	

	<bean id="addPlcVariableGroupToEditablePlcVariables" class="com.sicpa.standard.client.common.ioc.InjectByMethodBean">
		<property name="target" ref="cabinetEditablePlcVariables" />
		<property name="methodName" value="addGroup" />
		<property name="params" ref="brsPlcVariableGroup" />
	</bean>
	
	
	<bean id="brsPlcVariableGroup" class="com.sicpa.standard.sasscl.devices.plc.variable.PlcVariableGroup">
		<constructor-arg>
			<array>
				<ref bean="brsPlcDistance1VarDesc" />
				<ref bean="brsPlcDistance2VarDesc" />
				<ref bean="brsPlcSamplingPeriodVarDesc" />
				<ref bean="brsPlcNotificationCntVarDesc" />
				<ref bean="configBrsConsecutiveBadCodeThresholdDescriptor" />
				<ref bean="configPercentUnreadWarDescriptor" />
				<ref bean="configPercentUnreadErrDescriptor" />
				<ref bean="configNbSamplesUnreadDescriptor" />
				<ref bean="brsNCoderDiameter1Descriptor" />
				<ref bean="brsNCoderDiameter2Descriptor" />
				<ref bean="brsNCoderResolution1Descriptor" />
				<ref bean="brsNCoderResolution2Descriptor" />
				<ref bean="brsPlcSensorLow1VarDesc" />
				<ref bean="brsPlcSensorLow2VarDesc" />
			</array>
		</constructor-arg>
		<property name="description" value="plc.brs" />
	</bean>

</beans>
