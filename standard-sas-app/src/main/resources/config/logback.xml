<configuration debug="true">

    <!-- *********************************************************************** -->
    <!--                               APPENDERS                                 -->
    <!-- *********************************************************************** -->

    <!-- Console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>[%d{HH:mm:ss.SSS}] %-5p [%t] [%c{1}] %m%n</Pattern>
        </layout>
    </appender>

    <!-- Main log file -->
    <appender name="SASSCL" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>log/day.%d{yyyy-MM-dd}-sasscl.log.zip</FileNamePattern>
            <!-- keep 30 days worth of history -->
			<MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>[%d{yyyy-MM-dd - HH:mm:ss.SSS}] %-5p [%t] [%c{1}] %m%n</Pattern>
        </layout>
    </appender>

    <!-- Stdplc log file -->
    <appender name="STDPLC" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>log/day.%d{yyyy-MM-dd}-stdplc.log.zip</FileNamePattern>
            <!-- keep 30 days worth of history -->
			<MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>[%d{yyyy-MM-dd - HH:mm:ss.SSS}] %-5p [%t] [%c{1}] %m%n</Pattern>
        </layout>
    </appender>

    <!-- StdCamera log file -->
    <appender name="STDCAMERA" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>log/stdcamera.log</File>
        <Append>true</Append>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>log/stdcamera-.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>50MB</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>[%d{yyyy-MM-dd - HH:mm:ss.SSS}] %-5p [%t] [%c{1}] %m%n</Pattern>
        </layout>
    </appender>

    <!-- StdBarcodeReader log file -->
    <appender name="STDBARCODEREADER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>log/stdbarcodereader.log</File>
        <Append>true</Append>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>log/stdbarcodereader-.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>50MB</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>[%d{yyyy-MM-dd - HH:mm:ss.SSS}] %-5p [%t] [%c{1}] %m%n</Pattern>
        </layout>
    </appender>
  
  <appender name="STDOPERATOR" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>log/stdoperator.log</File>
    <Append>true</Append>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>log/stdoperator-.%i.log</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>10</maxIndex>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>50MB</maxFileSize>
    </triggeringPolicy>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>[%d{yyyy-MM-dd - HH:mm:ss.SSS}] %-5p [%t] [%c{1}] %m%n</Pattern>
    </layout>
 </appender>
 
    <!-- *********************************************************************** -->
    <!--                      APPENDERS/PACKAGE ASSOCIATION                      -->
    <!-- *********************************************************************** -->

  <root level="${root-level:-DEBUG}" additivity="false">
    <appender-ref ref="CONSOLE"/>
   </root>

  <logger additivity="true" name="com.sicpa.standard.sasscl">
  	<level value="DEBUG"/>
 	<appender-ref ref="SASSCL"/>
  </logger>

  <logger additivity="true" name="com.sicpa.standard.plc">
    <level value="DEBUG"/>
    <appender-ref ref="STDPLC" />
  </logger>

  <logger additivity="true" name="com.sicpa.standard.camera">
    <level value="DEBUG"/>
    <appender-ref ref="STDCAMERA" />
  </logger>

  <logger additivity="true" name="com.sicpa.standard.barcode.reader">
    <level value="info"/>
    <appender-ref ref="STDBARCODEREADER" />
  </logger>
  
  <logger additivity="false" name="com.sicpa.standard.sasscl.common.log.OperatorLogger">
    <level value="info"/>
    <appender-ref ref="STDOPERATOR" />
  </logger>
  
<!-- the logger declared with this class can have dedicated appender -->
<!-- additivity=true if you want the log in root appenders as well as in this specific appender-->
